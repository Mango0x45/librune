#!/bin/sh

cache()
{
	name="/tmp/librune/rtype/$(basename "$1")"
	if test ! -f "$name"
	then
		mkdir -p /tmp/librune/rtype
		wget -q "$1" -O "$name"
	fi
}

set -e
cd "${0%/*}/.."
exec >include/internal/rtype/vo.h

readonly URL='https://www.unicode.org/Public/UCD/latest/ucd/VerticalOrientation.txt'
cache "$URL"

cat <<C
/* This file is autogenerated by gen/rtype-vo; DO NOT EDIT. */

#ifndef RUNE_INTERNAL_RTYPE_VO_H
#define RUNE_INTERNAL_RTYPE_VO_H

/* IWYU pragma: private */
/* clang-format off */

#include "../types.h"
#include "../../rtype.h"

static const vertical_orientation_bf rtype_vo_lat1_tbl[] = {
C

gawk '
BEGIN {
	FS = "( *#.*| +; +)"
}

/^[^#]/ {
	n = split($1, a, /\.\./)
	lo = strtonum("0X" a[1])
	hi = strtonum("0X" a[n])

	for (i = lo; i <= hi; i++)
		props[i] = $2
}

END {
	for (i = 0; i <= 0xFF; i++)
		printf "%5s,\n", "VO_" (props[i] ? toupper(props[i]) : "R")
}
' /tmp/librune/rtype/VerticalOrientation.txt \
| paste -d' ' - - - - - - - - \
| sed 's/^/\t/'

cat <<C
};

static const struct {
	rune lo, hi;
	vertical_orientation_bf val;
} rtype_vo_tbl[] = {
C

gawk '
BEGIN {
	FS = "( *#.*| +; +)"
}

/^[^#]/ {
	n = split($1, a, /\.\./)
	lo = strtonum("0X" a[1])
	hi = strtonum("0X" a[n])

	for (i = lo; i <= hi; i++)
		props[i] = $2
}

END {
	for (i = 0; i <= 0x10FFFF; i++) {
		if (!props[i])
			continue
		lo = i
		while (props[lo] == props[i + 1])
			i++
		printf "\t{0x%06X, 0x%06X, VO_%s},\n", lo, i, toupper(props[lo])
	}
}
' /tmp/librune/rtype/VerticalOrientation.txt | sort

cat <<C
};

#endif /* !RUNE_INTERNAL_RTYPE_VO_H */
C
