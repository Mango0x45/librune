#!/bin/sh

cache()
{
	name="/tmp/librune/rtype/$(basename "$1")"
	if test ! -f "$name"
	then
		mkdir -p /tmp/librune/rtype
		wget -q "$1" -O "$name"
	fi
}

set -e
cd "${0%/*}/.."
exec >include/internal/rtype/cat.h

readonly URL='https://www.unicode.org/Public/UCD/latest/ucd/UnicodeData.txt'
cache "$URL"

cat <<C
/* This file is autogenerated by gen/rtype-cat; DO NOT EDIT. */

#ifndef RUNE_INTERNAL_RTYPE_CAT_H
#define RUNE_INTERNAL_RTYPE_CAT_H

/* IWYU pragma: private */
/* clang-format off */

#include "../types.h"
#include "../../rtype.h"

static const enum unicat rtype_cat_lat1_tbl[] = {
C

gawk '
BEGIN {
	FS = ";"
}

{
	s = "UC_" toupper($3)
	lo = strtonum("0X" $1)

	if ($2 ~ /First/) {
		getline
		hi = strtonum("0X" $1)
	} else
		hi = lo

	for (i = lo; i <= hi; i++)
		props[i] = s
}

END {
	for (i = 0; i <= 0xFF; i++)
		print props[i] ","
}
' /tmp/librune/rtype/* | paste -d' ' - - - - - - - - | sed 's/^/\t/'

cat <<C
};

static const struct {
	rune lo, hi;
	enum unicat val;
} rtype_cat_tbl[] = {
C

gawk '
BEGIN {
	FS = ";"
}

{
	s = "UC_" toupper($3)
	lo = strtonum("0X" $1)

	if ($2 ~ /First/) {
		getline
		hi = strtonum("0X" $1)
	} else
		hi = lo

	for (i = lo; i <= hi; i++)
		props[i] = s
}

END {
	for (i = 0x100; i <= 0x10FFFF; i++) {
		if (!props[i])
			continue
		lo = i
		while (props[lo] == props[i + 1])
			i++
		printf "\t{0x%06X, 0x%06X, %s},\n", lo, i, props[lo]
	}
}
' /tmp/librune/rtype/* | sort

cat <<C
};

#endif /* !RUNE_INTERNAL_RTYPE_CAT_H */
C
